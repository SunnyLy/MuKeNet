<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/weather_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="24小时天气预报"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/weather_left"
        android:layout_width="50dp"
        android:layout_height="186dp"
        android:layout_below="@+id/weather_tag"
        android:background="#FF3B4148"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingTop="22dp"
            android:gravity="center"
            android:text="37°C"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingTop="97dp"
            android:text="27°C"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="空气"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/moji_hsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weather_tag"
        android:layout_toRightOf="@+id/weather_left"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <chart.muke.com.mukechart.actualchart.WeatherView
                android:id="@+id/weather_view"
                android:layout_width="wrap_content"
                android:layout_height="186dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    
    

</RelativeLayout>