<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarWidgetTheme">@style/Theme.Holo.ActionBar</item>
    </style>

    <style name="Theme.Holo.ActionBar" parent="">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!--图表样式-->
    <declare-styleable name="SunnyGraphStyle">
        <!--图表标题-->
        <attr name="graphTitle" format="string"/>
        <!--X轴名称-->
        <attr name="X_AxisName" format="string"/>
        <!--Y轴名称-->
        <attr name="Y_AxisName" format="string"/>
        <attr name="axisTextSize" format="dimension|integer"/>
        <attr name="axisTextColor" format="color|integer"/>
        <!--是否显示圆点-->
        <attr name="showOrigin" format="boolean"/>
        <!-- 是否显示X轴-->
        <attr name="showXaxis" format="boolean"/>
        <!-- 是否显示Y轴-->
        <attr name="showYaxis" format="boolean"/>
        <!-- 坐标轴的颜色-->
        <attr name="axisColor" format="integer|color|reference"/>
    </declare-styleable>


    <declare-styleable name="MukeMarkerView">
        <!--展示左边markview-->
        <attr name="showLeftMarker" format="boolean"/>
        <attr name="showRightMarker" format="boolean"/>
        <attr name="showBottomMarker" format="boolean"/>
        <attr name="showTopMarker" format="boolean"/>
        <attr name="drawMarkerView" format="boolean"/>
    </declare-styleable>

    <style name="SingleText">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MainCommonText" parent="SingleText">
        <item name="android:textColor">@color/text_color_common</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ViewMainCommonText" parent="SingleText">
        <item name="android:textColor">@color/text_color_maroon</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
